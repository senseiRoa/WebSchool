@model IEnumerable<WebSchool.Models.InscriptionStudentViewModel>

@{
    ViewBag.Title = "ProgramList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<!-- DataTables -->
<link rel="stylesheet" href="~/Content/datatables.net-bs/css/dataTables.bootstrap.min.css">





<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Clases programadas</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table class="table table-bordered table-hover" ">

                    <tr>
                        <th>
                            Curso
                        </th>
                        <th>
                            Profesor
                        </th>
                        <th>
                            Fecha Programción
                        </th>
                        <th>
                            Hora de inicio
                        </th>
                        <th>
                            Hora final
                        </th>
                        <th>
                            Observación
                        </th>
                        <th>
                            Asistencia
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.InstanceOfCourse.CourseName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InstanceOfCourse.teacherName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InstanceOfCourse.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InstanceOfCourse.StartTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InstanceOfCourse.FinalTime)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Observation)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Assistance)
                            </td>

                            <td>
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.InscriptionStudentID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.InscriptionStudentID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.InscriptionStudentID })*@
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <div class="col-md-3"></div>
    <!-- /.col -->
</div>
<!-- /.row -->




@section Scripts {



    <!-- DataTables -->
    <script src="~/Content/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

    <script>
        $(function () {
            //Initialize Select2 Elements
           $('table').DataTable();
        })</script>
}



