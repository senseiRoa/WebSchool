@model WebSchool.Models.CourseViewModel

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("Add", "Course", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-3">  </div>
        <div class="col-md-6">


            <div class="box box-info">
                <div class="box-header">
                    <h3 class="box-title">Instancia de un curso</h3>
                </div>
                <div class="box-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group">
                        <label>
                            Nombre
                        </label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        <label>Código</label>
                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "timepicker form-control" } })
                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                    </div>





                </div>
                <!-- /.box-body -->
                <div class="box-footer">

                    <input type="submit" value="Create" class="btn btn-info pull-right" />
                </div>
            </div>
            <!-- /.box -->
        </div>
        <div class="col-md-3">  </div>

    </div>


}
