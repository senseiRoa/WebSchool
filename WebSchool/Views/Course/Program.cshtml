@model WebSchool.Models.InscriptionStudentViewModel

@{
    ViewBag.Title = "Program";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="~/Content/select2/dist/css/select2.min.css">


@using (Html.BeginForm("Program", "Course", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()




    <div class="row">
        <div class="col-md-2">  </div>
        <div class="col-md-8">


            <div class="box box-info">
                <div class="box-header">
                    <h3 class="box-title">Instancia de un curso</h3>
                </div>
                <div class="box-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                    <div class="form-group">
                        <label>Curso</label>
                        <div>
                            @Html.DropDownListFor(model => model.InstanceOfCourse.InstanceOfCourseID, (IEnumerable<SelectListItem>)ViewBag.Courses, String.Empty, new { @class = "form-control select2" })
                            @Html.ValidationMessageFor(model => model.InstanceOfCourse.InstanceOfCourseID, "", new { @class = "text-danger" })

                        </div>
                    </div>


                </div>
                <!-- /.box-body -->
                <div class="box-footer">

                    <input type="submit" value="Create" class="btn btn-info pull-right" />
                </div>
            </div>
            <!-- /.box -->
        </div>
        <div class="col-md-2">  </div>

    </div>
}


@section Scripts {

    <script src="~/Content/select2/dist/js/select2.full.min.js"></script>
    

    <script>
        $(function () {
            //Initialize Select2 Elements
            $('select').select2()

          
        })</script>
}























